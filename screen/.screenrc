
shell bash # Tell screen your default shell

startup_message off # Turn off start message

altscreen on # Refresh the display when exiting programs

hardstatus alwayslastline '%{= G}[ %{G}%H %{g}][%= %{= w}%?%-Lw%?%{= R}%n*%f %t%?%{= R}(%u)%?%{= w}%+Lw%?%= %{= g}][ %{y}Load: %l %{g}][%{B}%Y-%m-%d %{W}%c:%s %{g}]'

# Reference [GNU Screen 256 colors] https://wiki.archlinux.org/index.php/GNU_Screen
term screen-256color
#term xterm-256color
# When using rxvt-unicode:
#term rxvt-unicode-256color

